
#topo
    @extends .absolute

.banners
    @extends .padding-zero

.line
    position: relative
    &::after
        content: " "
        width: 30px
        height: 1px
        background-color: black
        position: absolute;
        bottom: 0;
        left: 0;

.cursos-todos
    h4 
        font-size: 16px
    .curso
        border 1px solid #ebebeb
        margin-top 20px

.div-curso-back
    width: 100%;
    background-repeat: no-repeat
    background-size: cover
    display: flex
    justify-content: center
    position relative
    background-position: center center
    &::after
        content: "";
        display: block;
        padding-bottom: 90%;    
    a
        opacity 0
        display: flex;
        justify-content: center
        align-self: center;
        position absolute
        color white
        text-decoration: none
        width 100%
        height 100%
        transition 1s        
        background-color: alpha($colors['oceano'], 0.8)
        & > *
            align-self center
    &:hover
        a
            opacity 1


.artigo-w
    background-color white
    transition 1s
    color black
    .dia 
        font-size: 65px
    &:hover
        background-color: $colors['black']
        .artigo-textos
            h4
               color $colors['oceano'] 
            p 
                color $colors['inverse']

.arrowsPlace
    width: 120px
    height 40px;
    position relative
    right 0
    float right 

.section 
    padding: 40px 0

.cursos-todos
    padding 30px 5px

.line-data
    width: 100%
    height: 2px
    background-color: black
    .block
        width: 30px
        height: 4px
        margin: auto
        margin-top: -1px
        background-color: $colors['oceano']

//

img.slick-disabled
    filter: grayscale(100%);

.slick-next
.slick-prev
    z-index: 99999

.slick-prev
    left 25px

.slick-next
    right 25px


.seta-right
.seta-left
    position: absolute
    top 50%
    z-index 999
    cursor pointer

.seta-right
    right 25px
.seta-left
    left 25px

.icon-data
    background-image: url(../img/icone.jpg)
    background-position: 15px center;
    background-repeat: no-repeat
    margin-top 20px




        